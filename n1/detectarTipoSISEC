/**
 * Funci칩n para detectar el tipo de SISEC en el documento.
 * Nivel N1
 */
function N1_detectarTipoSISEC(texto) {
  Logger.log("游늷 Analizando el tipo de SISEC en el documento...");

  // Convertimos todo a min칰sculas para hacer la b칰squeda m치s robusta
  let textoMinusculas = texto.toLowerCase();

  // 游댍 Condici칩n para detectar SISEC GENERAL
  if (
    textoMinusculas.includes("fecha de alta") &&
    textoMinusculas.includes("fecha de baja") &&
    !textoMinusculas.includes("tipo de movimiento")
  ) {
    Logger.log("游늷 Tipo de SISEC detectado: SISEC GENERAL");
    return "SISEC GENERAL";
  }

  // 游댍 Condici칩n para detectar SISEC DETALLADO
  if (
    textoMinusculas.includes("tipo de movimiento") &&
    textoMinusculas.includes("fecha de movimiento") &&
    textoMinusculas.includes("salario base")
  ) {
    Logger.log("游늷 Tipo de SISEC detectado: SISEC DETALLADO");
    return "SISEC DETALLADO";
  }

  Logger.log("丘멆잺 No se pudo determinar el tipo de SISEC.");
  return "DESCONOCIDO";
}
